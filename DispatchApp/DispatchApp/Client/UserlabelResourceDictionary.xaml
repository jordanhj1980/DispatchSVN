    <!-- 应该在此定义资源字典条目。-->

    <Style x:Key="UserCallButton" TargetType="{x:Type Button}">
        <!--<Style.Triggers>
            <Trigger Property="IsMouseOver" Value ="True" >
                <Setter Property="Background" Value="Red"></Setter>
            </Trigger>
        </Style.Triggers>-->
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border BorderThickness ="{TemplateBinding Property=BorderThickness}"  BorderBrush ="{TemplateBinding Property=BorderBrush}"  Background="{TemplateBinding Property=Background}">
                        <ContentPresenter/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>